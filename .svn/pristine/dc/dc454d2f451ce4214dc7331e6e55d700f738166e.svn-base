var Pagga = Pagga || {};

Pagga.perfil = {};

Pagga.perfil.salva = function(codigo, descricao){
	
	var obj = {
		id : codigo,
		descricao : descricao
	};

	return $.ajax({
		  contentType: 'application/json',
		  type: "POST",
		  url: '../perfil',
		  data: JSON.stringify(obj),
		  dataType: 'json'
	});
	
}

