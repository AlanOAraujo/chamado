Pagga.usuario.salva = function(nome, email, cpf, senha, ativo, perfis){
	
	var data = {
			nome : nome,
			email : email,
			cpf : cpf,
			senha : senha,
			ativo : ativo,
			usuarioPerfilList : []
	};
	
	perfis.forEach(function(perfil) {
		data.usuarioPerfilList.push({
			perfil : {
				id : perfil
			}
		});
	});
	
	return $.ajax({
		  contentType: 'application/json',
		  type: "POST",
		  url: '../usuario',
		  data: JSON.stringify(data),
		  dataType: 'json'
	});
}

