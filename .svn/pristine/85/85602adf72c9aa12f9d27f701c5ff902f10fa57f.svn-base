}

.header-navigation{
	height: 100%
}
   
.div-imgPagga{
	text-align: center;
	width: 100%;
	margin-left: 0px;
	padding: 1rem;
}

.navbar-telas{
	padding-right: 0rem;
    padding-left: 0rem;
}

.navbar-nav>li:first-child{
	border-top: 1px #e5e5e5 solid
} 

.navbar-nav>li {
	border-bottom: 1px #e5e5e5 solid;
}

.navbar-nav>li:hover {
	font-weight: bold;
}

.navbar-nav .active{
	font-weight: bold;
	background-color: #007bff;
}

.navbar-nav>li>a {
	padding-left: 1rem;
	text-decoration:none;
	color: #000000;
	padding: 0.9rem;
}

.navbar-nav .nav-link{
	padding-left: 1rem;
}

.header-navigation{
	border-right: 1px #c7c4c4 solid;
	padding-right: 0rem;
}

.btn-menu{
	float: left;
	margin-top: 1rem;
	border-top-left-radius: 0;
    border-bottom-left-radius: 0;
}